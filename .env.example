# Private Key for Deployment
# WARNING: Never commit your actual private key to version control
# Get your private key from MetaMask (Account Details > Export Private Key)
PRIVATE_KEY=your_wallet_private_key_here

# Sepolia RPC URL Options
# Option 1: Infura (Get API key from https://infura.io/)
INFURA_PROJECT_ID=your_infura_project_id_here
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id_here

# Option 2: Alchemy (Get API key from https://www.alchemy.com/)
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_api_key_here

# Option 3: Public RPC (Less reliable, use for testing only)
# SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Etherscan API Key for Contract Verification
# Get your API key from https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Optional: Gas Settings (uncomment to use custom values)
# GAS_PRICE=20000000000
# GAS_LIMIT=6000000

# ============================================
# Gas Reporter Configuration
# ============================================
# Enable gas reporting during tests
REPORT_GAS=false

# CoinMarketCap API key for USD price conversion
# Get your API key from https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Gas report output file
GAS_REPORT_FILE=gas-report.txt

# ============================================
# Code Coverage Configuration
# ============================================
# Enable coverage reporting
ENABLE_COVERAGE=true

# Coverage output directory
COVERAGE_DIR=./coverage

# ============================================
# Security & Performance Settings
# ============================================
# Enable Slither security analysis
ENABLE_SLITHER=true

# Enable contract size checking
CHECK_CONTRACT_SIZE=true

# Maximum contract size in bytes (24KB = 24576 bytes)
MAX_CONTRACT_SIZE=24576

# Enable optimizer (recommended for production)
ENABLE_OPTIMIZER=true

# Optimizer runs (higher = more expensive deployment, cheaper execution)
OPTIMIZER_RUNS=200

# ============================================
# Access Control & Pauser Configuration
# ============================================
# Pauser role address (address authorized to pause contracts)
PAUSER_ADDRESS=0x0000000000000000000000000000000000000000

# Emergency pause enabled
EMERGENCY_PAUSE_ENABLED=false

# Multi-sig wallet for admin functions (optional)
MULTISIG_WALLET=0x0000000000000000000000000000000000000000

# Timelock delay for critical operations (in seconds)
TIMELOCK_DELAY=172800

# ============================================
# Frontend Configuration
# ============================================
# API endpoints
API_BASE_URL=https://api.example.com

# IPFS gateway for content storage
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=https://api.pinata.cloud

# Pinata API keys for IPFS pinning
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# ============================================
# Monitoring & Analytics
# ============================================
# Enable performance monitoring
ENABLE_MONITORING=false

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Analytics tracking ID
ANALYTICS_ID=your_analytics_id

# ============================================
# Development Settings
# ============================================
# Node environment
NODE_ENV=development

# Debug mode
DEBUG=false

# Verbose logging
VERBOSE=false

# Skip tests (not recommended)
SKIP_TESTS=false

# ============================================
# CI/CD Settings
# ============================================
# Codecov token for coverage uploads
CODECOV_TOKEN=your_codecov_token_here

# GitHub token for automated operations
GITHUB_TOKEN=your_github_token_here

# Deployment environment
DEPLOYMENT_ENV=testnet

# Auto-deploy on merge (use with caution)
AUTO_DEPLOY=false
