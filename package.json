{
  "name": "literature-review-system",
  "version": "1.0.0",
  "description": "Confidential literature awards evaluation system using FHE",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "node": "hardhat node",
    "console": "hardhat console --network sepolia",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint '**/*.js'",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js:fix": "eslint '**/*.js' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "size-contracts": "hardhat size-contracts",
    "security": "npm run security:slither",
    "security:slither": "slither . --config-file .slither.config.json",
    "security:mythril": "myth analyze contracts/*.sol",
    "gas-report": "REPORT_GAS=true hardhat test",
    "prepare": "husky install",
    "precommit": "npm run lint && npm run format:check && npm test",
    "prepush": "npm run coverage && npm run size-contracts",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.5.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "hardhat": "^2.19.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@typechain/hardhat": "^9.1.0",
    "@typechain/ethers-v6": "^0.5.0",
    "ethers": "^6.9.0",
    "chai": "^4.3.10",
    "typescript": "^5.0.0",
    "solhint": "^4.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solidity-coverage": "^0.8.5",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0"
  },
  "keywords": ["fhe", "literature", "privacy", "awards", "blockchain", "ethereum", "smart-contracts"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}